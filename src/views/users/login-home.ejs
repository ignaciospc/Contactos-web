<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;1,200;1,300&display=swap"
        rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/login-home.css">
    <title>login</title>
</head>

<html>
    <div class="container-login-page">

        <div class="container-login">
            
            <div class="form-login-user">

                <% if( typeof errors != "undefined") {  %>         
                <div class="errors-back">
                    <ul class="list-errors">  
                        <%for (const error of errors) { %>
                            <li class="error-back">  <%= error.msg %>   </li>
                        <% } %> 
                                                
                    </ul>
                </div>
               <% }  %> 

                <form action="/account/login-home" method="POST" class="" id="">
                
                <div class="container-input"> <input type="text" name="email" class="input-form-login" id="email" placeholder="email@hotmail.com" autocomplete="off"></div>

                <div class="container-input"> <input type="text" name="password" class="input-form-login" id="password" placeholder="password"><span class="view-password">Mostrar</span></div>
   
                <button type="submit" class="button-login"> login</button>

                <div class="chekbox">
                   <input type="checkbox" class="remember-input" name="remember" id="remember">
                   <label for="remember" class="remember-label">Recuerdame</label>
                </div>

                </form>

                <div class="forget-password"> <a href="">¿olvidaste tu contraseña?</a></div>

                
               <a href="/account/register" class="redirect-register"><button type="submit" class="button-redirect-register"> Registrate</button></a> 

               
             
            </div>
               
            </div>
        </div>
    </div>
</html>